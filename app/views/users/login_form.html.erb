<div class='container-title'>
  <h1>ログイン</h1>
</div>

<p id="notice"><%= notice %></p>

<% if @error_message %>
  <div class="form-error">
    <%= @error_message %>
  </div>
<% end %>

<div class='user-form'>
  <%=form_tag('/login') do%>
    <p>メールアドレス</p>
    <input name = 'email' value= '<%=@email%>'>

    <p>パスワード</p>
    <input name = 'password' type = 'password' value = '<%=@password%>'>

    <div class='btn'>
    <input type="submit" value="ログイン">
    </div>
  <%end%>
</div>

<div class='container-footer'>
  <p><%= link_to '戻る', '/' %></p>
</div>
