<div class='user-profile-right'>
  <div class='container-title'>
    <h1>タイムライン</h1>
  </div>
<div class='content-index'>
    <% @timeline.each do |t| %>
    <div class='content-index-item'>
      <div class='content-index-item-top'>
        <h1><%= t.title %></h1>
        <%= link_to '', t %>
      </div>
      <div class='content-index-item-bottom'>
        <div class='content-index-item-bottom-left'>
          <img src="<%= "/user_images/#{t.user.image_name}" %>">
          <p>投稿者：<%= t.user.name %></p>
        </div>
        <div class='content-index-item-bottom-right'>
          <p>投稿日：<%= t.created_at.strftime('%Y/%m/%d') %></p>
          <span class="fa fa-heart like-btn-unlike"></span>
          <%= @likes_count = Like.where(post_id: t.id).count %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class='container-footer'>
  <p><%= link_to '戻る', '/' %></p>
</div>
